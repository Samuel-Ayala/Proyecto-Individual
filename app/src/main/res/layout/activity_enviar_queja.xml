<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitiesApoderado.EnviarQuejaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/tituloQueja"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Escribanos a continuación su queja, incomodidad, sugerencia o consulta sobre alguna calificación con los mayores detalles posibles"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#010209" />

        <EditText
            android:id="@+id/textoQueja"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine|textNoSuggestions" />

        <Button
            android:id="@+id/buttonEnviarQueja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/boton_redondeado"
            android:text="Enviar"
            android:textColor="@color/common_google_signin_btn_text_dark" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>